{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/r",
        "function": "redirect",
        "region": "us-central1"
      },
      {
        "source": "/r/**",
        "function": "redirect",
        "region": "us-central1"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}